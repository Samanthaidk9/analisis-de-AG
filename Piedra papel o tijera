#Importar libreria
import random
import time

start_time = time.time()

# Código de la función aquí

end_time = time.time()

total_time = end_time - start_time

print(f"El tiempo de ejecución de la función fue de {total_time} segundos")
#Opciones
op = ("Piedra", "Papel", "Tijera")
puntaje_usuario = 0
puntaje_cpu = 0
#Entradas
usuario = input("Digite una opcion: Piedra, Papel o Tijera:   ")
cpu = random.choice(op)
#Imprimir informacion
print(f"La op que digito el usuario es: {usuario}")
print(f"La op de la CPU es: {cpu}")
#Proceso
while True:
   if not usuario in op:
         print("Opcion no valida!!!")
         continue
   if usuario == "Piedra" and cpu == "Piedra":
         print("Empate")
   elif usuario == "Tijera" and cpu == "Tijera":
         print("Empate")
   elif usuario == "Papel" and cpu == "Papel":
         print("Empate")
   elif usuario == "Piedra" and cpu == "Papel":
         print("Gana cpu!!!")
   elif usuario == "Piedra" and cpu == "Tijera":
         print("Gana usuario!!!")
   elif usuario == "Papel" and cpu == "Piedra":
         print("Gana usuario!!!")
   elif usuario == "Papel" and cpu == "Tijera":
         print("Gana cpu!!!")
   elif usuario == "Tijera" and cpu == "Piedra":
         print("Gana cpu!!!")
   elif usuario == "Tijera" and cpu == "Papel":
         print("Gana usuario!!!")
   else:
         print("Error!!!")
      


